{
    "compilerOptions": {
        "allowJs": true,
		"module": "CommonJS",
        "moduleResolution": "Node",
		"skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "../../out",
        "resolveJsonModule": true,
        "removeComments": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    }
}