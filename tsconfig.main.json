{
    "compilerOptions": {
        "allowJs": true,
		"module": "CommonJS",
        "moduleResolution": "Node",
		"skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "resolveJsonModule": true,
        "removeComments": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
	"include": [
		"src/main.ts",
		"src/preload.ts"
	]
}